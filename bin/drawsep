#!/bin/sh

[ -n "$UPTIMETXT" ] \
	&& _uptime="$UPTIMETXT" \
	|| _uptime=$(uptime)

drawsep() {
	if [ -z "$1" ] ; then
		_minus=''
		printf "======="
	else
		_minus="$1"
		printf "===== %s " "${_minus}"
	fi
	if command -v jot > /dev/null ; then
		printf "=%.0s" $(jot $((${#_uptime}-${#_minus}-7))) ; printf '\n'
	elif command -v perl > /dev/null ; then
		perl -e 'print("=" x $ARGV[0], "\n" )' "$((${#_uptime}-${#_minus}-7))"
	else
		printf '%*s' $((${#_uptime}-${#_minus}-7)) "" | tr ' ' '=' ; printf '\n'
	fi
}

drawsep "$1"
